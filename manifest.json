{
  "manifest_version": 3,
  "name": "Cyber Guardian - Domain Filter",
  "version": "1.0.0",
  "description": "Security extension that allows only .com and .org domains, with customizable whitelist for additional trusted sites.",
  "permissions": ["declarativeNetRequest", "declarativeNetRequestWithRegex", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cyber Guardian Settings"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
